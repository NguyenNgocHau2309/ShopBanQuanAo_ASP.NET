@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ShopOnline.Models.Size

@{
    ViewData["Title"] = "AddSize";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1>Thêm kích thước</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddSize">
            <div class="form-group">
                <label asp-for="TenSize" class="control-label"></label>
                <input asp-for="TenSize" class="form-control" />
                <span asp-validation-for="TenSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Size">Trở về</a>
</div>

