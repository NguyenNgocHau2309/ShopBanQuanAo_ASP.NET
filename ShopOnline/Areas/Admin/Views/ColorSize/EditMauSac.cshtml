@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ShopOnline.Models.MauSac

@{
    ViewData["Title"] = "EditMauSac";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}
<h1>Chỉnh sửa màu sắc</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditMauSac">
            <input type="hidden" asp-for="MaMs" />
            <div class="form-group">
                <label class="control-label">Tên SP</label>
                <input asp-for="TenMs" class="form-control" placeholder="Nhập tên màu sắc" required value="@Model.TenMs" />
                <span asp-validation-for="TenMs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Chỉnh Sửa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MauSac">Back to List</a>
</div>

