    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Trang cá nhân</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Trang Chủ</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Thông tin cá nhân</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <div class="container mt-5">

        <!-- Tab navigation -->
        <!-- Tab navigation -->
        <ul class="nav nav-pills mb-4 justify-content-center" id="profileTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveTab"].ToString() == "personal-info" ? "active" : "")" id="personal-info-tab" data-toggle="pill" href="#personal-info" role="tab" aria-controls="personal-info" aria-selected="@(ViewData["ActiveTab"].ToString() == "personal-info" ? "true" : "false")">Thông Tin Cá Nhân</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveTab"].ToString() == "orders" ? "active" : "")" id="orders-tab" data-toggle="pill" href="#orders" role="tab" aria-controls="orders" aria-selected="@(ViewData["ActiveTab"].ToString() == "orders" ? "true" : "false")">Đơn Hàng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveTab"].ToString() == "reviews" ? "active" : "")" id="reviews-tab" data-toggle="pill" href="#reviews" role="tab" aria-controls="reviews" aria-selected="@(ViewData["ActiveTab"].ToString() == "reviews" ? "true" : "false")">Đánh Giá</a>
            </li>
        </ul>


        <!-- Tab content -->
        <div class="tab-content" id="profileTabsContent">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }
            <!-- Thông tin cá nhân -->
            <div class="tab-pane fade @(ViewData["ActiveTab"].ToString() == "personal-info" ? "show active" : "")" id="personal-info" role="tabpanel" aria-labelledby="personal-info-tab">
                <h4>Thông Tin Cá Nhân</h4>
                <form asp-controller="Personal" asp-action="ThongTinCaNhan" method="post">
                    <input type="hidden" name="MaKh" value="@Model.KhachHang.MaKh" />
                    <div class="form-group">
                        <label for="name">Họ và Tên</label>
                        <input type="text" class="form-control" id="name" name="HovaTen" value="@Model.KhachHang.HovaTen">
                    </div>
                    <div class="form-group">
                        <label for="gender">Giới Tính</label>
                        <select class="form-control" id="gender" name="GioiTinh">
                            <option value="M" selected="@(Model.KhachHang.GioiTinh == "M" ? "selected" : "")">Nam</option>
                            <option value="F" selected="@(Model.KhachHang.GioiTinh == "F" ? "selected" : "")">Nữ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="dob">Ngày Sinh</label>
                        <input type="date" class="form-control" id="dob" name="NgaySinh" value="@Model.KhachHang.NgaySinh?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="form-group">
                        <label for="phone">Số Điện Thoại</label>
                        <input type="text" class="form-control" id="phone" name="Sdt" value="@Model.KhachHang.Sdt">
                    </div>
                    <div class="form-group">
                        <label for="email">Địa chỉ Email</label>
                        <input type="email" class="form-control" id="email" name="Email" value="@Model.KhachHang.Email">
                    </div>
                    <div class="form-group">
                        <label for="address">Địa Chỉ</label>
                        <input type="text" class="form-control" id="address" name="DiaChi" value="@Model.KhachHang.DiaChi">
                    </div>
                    <div class="form-group">
                        <label for="username">Tên Đăng Nhập</label>
                        <input type="text" class="form-control" id="username" name="Username" value="@Model.KhachHang.Username">
                    </div>

                    <div class="form-group">
                        <label for="password">Mật Khẩu Mới (nếu có)</label>
                        <input type="password" class="form-control" id="password" name="Password" placeholder="Nhập mật khẩu mới (nếu cần)" value="@Model.KhachHang.Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
                    </div>
                </form>
            </div>

            <!-- Đơn hàng -->
            <div class="tab-pane fade @(ViewData["ActiveTab"].ToString() == "orders" ? "show active" : "")" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover order-table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Mã Đơn Hàng</th>
                                <th>Ngày Đặt</th>
                                <th>Tổng Tiền</th>
                                <th>Phương thức giao hàng</th>
                                <th>Địa chỉ giao hàng</th>
                                <th >Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donHang in Model.donHangs)
                            {
                                <tr onclick="location.href='@Url.Action("TheoDoiDonHang", "MonitorInvoice", new { macode = donHang.MaCode })'" style="cursor: pointer;">
                                    <td>@donHang.MaDh</td>
                                    <td>@donHang.NgayDh</td>
                                    <td>₫@String.Format("{0:#,0.000}", donHang.TienThu)</td>
                                    <td>@donHang.Ptgh</td>
                                    <td>@donHang.Dcgh</td>
                                    <td>@donHang.TrangThai</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Đánh giá -->
            <div class="tab-pane fade @(ViewData["ActiveTab"].ToString() == "reviews" ? "show active" : "")" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                <div class="review-section">
                    <p><strong>Đánh giá sản phẩm:</strong></p>
                    <ul class="list-group">
                        @foreach (var item in Model.danhgias)
                        {
                            <li class="list-group-item">
                                <!-- Hiển thị hình ảnh sản phẩm -->
                                <strong>Ngày đánh giá:</strong> @item.ngaydg.ToShortDateString()<br>
                                <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                    <img src="@item.HaSP" alt="Hình ảnh sản phẩm" style="max-width: 50px; margin-right: 10px;" />
                                    <span>@item.TenSp</span>
                                </div>
                                <strong>Đánh giá:</strong>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= @item.diem)
                                    {
                                        <span style="color: gold;">&#9733;</span> <!-- Ngôi sao đầy màu vàng -->
                                    }
                                    else
                                    {
                                        <span style="color: lightgray;">&#9733;</span> <!-- Ngôi sao nhạt cho phần đánh giá thấp -->
                                    }
                                }
                                <br>
                                <strong>Nội dung:</strong> @item.noidung<br>
                               
                                @if (item.ha != null && item.ha.Count > 0)
                                {
                                    <strong>Hình ảnh đánh giá:</strong>

                                    <br>
                                    @foreach (var image in item.ha)
                                    {
                                        <img src="@image" alt="Hình ảnh đánh giá" style="max-width: 150px; margin-right: 10px;" />
                                    }
                                }

                                @if (item.vd != null && item.vd.Count > 0)
                                {
                                    <strong style="display:block;">Video đánh giá:</strong>

                                    <br>
                                    @foreach (var video in item.vd)
                                    {
                                        <video width="100" controls>
                                            <source src="@video" type="video/mp4">
                                            Trình duyệt của bạn không hỗ trợ video.
                                        </video>
                                    }
                                }
                                <!-- Thêm nút Chỉnh sửa và Xóa -->
                                <div style="text-align: right; margin-top: 10px;">
                                    <a href="@Url.Action("ChiTietSP","DetailProduct", new { masp = item.masp, activeTab = "tab-pane-3" }) " class="btn btn-primary btn-sm">Xem</a>
                                    <a href="@Url.Action("EditDanhGia", "Evaluate", new { madg = item.madg })" class="btn btn-primary btn-sm">Chỉnh sửa</a>
                                    <a href="@Url.Action("DeleteDanhGia", "Evaluate", new { madg = item.madg})" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa đánh giá này không?');">Xóa</a>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
            </div>

        </div>
    </div>
