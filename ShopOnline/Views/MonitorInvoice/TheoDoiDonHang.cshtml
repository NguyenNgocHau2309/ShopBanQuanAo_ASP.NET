    @if ( Model != null && Model.DonHangs != null && Model.DonHangs.Any())
    {
        foreach (var donhang in Model.DonHangs)
        {
        <div class="container">
            <!-- Phần tiêu đề của đơn hàng và trạng thái giao hàng -->
            <div class="order-header" style="display: flex; justify-content: space-between; align-items: center; background-color: #f0f0f0; padding: 10px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="header-item" style="flex: 1; text-align: center; padding: 10px; border: 2px solid #007bff; border-radius: 8px; background-color: #e7f1ff; margin-right: 10px;">
                    <h6 style="margin: 0; color: #007bff;">Đơn Hàng: @donhang.MaCode</h6>
                </div>
                <div class="header-item" style="flex: 1; text-align: center; padding: 10px; border: 2px solid #28a745; border-radius: 8px; background-color: #e7ffe7;">
                    <h6 style="margin: 0; color: #28a745;">@donhang.TrangThai</h6>
                </div>
            </div>


            <div class="order-list" style="margin-bottom: 20px;">
                <div class="order-item" style="border: 1px solid #ddd; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: #fff;">
                    <table class="table" style="width: 100%; border-collapse: collapse; text-align: left;">
                            <thead>
                                <tr style="background-color: #f7f7f7;">
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Hình Ảnh</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Tên Sản Phẩm</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Màu Sắc</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Size</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Số Lượng</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Giá</th>
                                    <th style="padding: 10px; border-bottom: 1px solid #ddd;">Tổng</th>
                                    @if (donhang.TrangThai == "Đã giao hàng")
                                    {
                                        <th style="padding: 10px; border-bottom: 1px solid #ddd;">Đánh Giá</th> <!-- Cột mới cho nút Đánh giá -->
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in donhang.SanPham)
                                {
                                    <tr onclick="location.href='@Url.Action("ChiTietSP", "DetailProduct", new { masp = item.MaSP })'">
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                            <img src="@item.AnhSP" alt="Product Image" style="width: 50px; height: 50px; border-radius: 5px; border: 1px solid #ccc;">
                                        </td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.TenSP</td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Mausac</td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Size</td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Soluong</td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">₫@String.Format("{0:#,0.000}", item.Gia)</td>
                                        <td style="padding: 10px; border-bottom: 1px solid #ddd;">₫@String.Format("{0:#,0.000}", item.Tong)</td>
                                        @if (donhang.TrangThai == "Đã giao hàng" && !item.IsDanhGia) // Kiểm tra nếu sản phẩm chưa được đánh giá
                                        {
                                            <td style="padding: 10px; border-bottom: 1px solid #ddd;">
                                                <a href="@Url.Action("DanhGia", "Evaluate", new { macts = item.MaCTSPS, madh = donhang.MaDH})"
                                                   class="btn btn-primary"
                                                   style="width: 100px; padding: 10px; font-size: 14px;">Đánh giá</a> <!-- Nút Đánh giá -->
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>

                        <tfoot>
                            <tr>
                                <td colspan="6" style="padding: 10px; text-align: right; border-top: 2px solid #007bff; font-weight: bold;">Tổng Giá:</td>
                                <td style="padding: 10px; font-weight: bold;">₫@String.Format("{0:#,0.000}", donhang.TongGia)</td>
                            </tr>
                            <tr>
                                <td colspan="6" style="padding: 10px; text-align: right;">Giảm Giá:</td>
                                <td style="padding: 10px;">₫@String.Format("{0:#,0.000}", donhang.GiamGia)</td>
                            </tr>
                            <tr>
                                <td colspan="6" style="padding: 10px; text-align: right;">Phí Vận Chuyển:</td>
                                <td style="padding: 10px;">₫@String.Format("{0:#,0.000}", donhang.PhiVC)</td>
                            </tr>
                            <tr>
                                <td colspan="6" style="padding: 10px; text-align: right; font-weight: bold; color: #28a745;"><strong>Tổng Cộng:</strong></td>
                                <td style="padding: 10px; font-weight: bold; color: #28a745;"><strong>₫@String.Format("{0:#,0.000}", donhang.TongCong)</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        }
