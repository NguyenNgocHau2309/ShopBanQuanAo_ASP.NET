                                                            <source src="@video" type="video/mp4">
                                                            Trình duyệt của bạn không hỗ trợ video.
                                                        </video>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <h4 class="mb-4">Chưa có đánh giá nào cho sản phẩm này.</h4>
                                }
                            </div>

                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
