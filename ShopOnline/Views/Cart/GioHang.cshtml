    <script>
        $(document).ready(function () {
            const ship = 0; // Đặt giá trị ship cố định là 0

            // Gọi hàm AJAX để cập nhật khuyến mãi và tổng tiền khi trang được tải
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Checkout", "hoadon")', // Đường dẫn chính xác tới action trong controller
                data: {
                    ship: ship
                },
                success: function (data) {
                    // Hiển thị thông tin giảm giá
                    $('#discountValue').text(data.GiamGia.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }));

                    // Hiển thị thông tin quà tặng
                    $('#giftValue').text(data.QuaTang.length > 0 ? data.QuaTang.join(', ') : 'Không có');

                    // Cập nhật tổng tiền khi trang được tải
                    updateTotalPay(data.GiamGia);
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error); // Hiển thị lỗi trong console
                }
            });

            // Tăng/giảm số lượng sản phẩm trong giỏ hàng
            $('.btn-minus').click(function () {
                const quantityInput = $(this).closest('.input-group').find('.form-control');
                let quantity = parseInt(quantityInput.val());
                const productId = quantityInput.data('product-id');
                const mams = quantityInput.data('color');
                const masize = quantityInput.data('size');

                if (quantity > 1) {
                    quantity -= 1;
                    quantityInput.val(quantity);
                    updateQuantity(productId, mams, masize, quantity);
                }
            });

            $('.btn-plus').click(function () {
                const quantityInput = $(this).closest('.input-group').find('.form-control');
                let quantity = parseInt(quantityInput.val());
                const productId = quantityInput.data('product-id');
                const mams = quantityInput.data('color');
                const masize = quantityInput.data('size');

                quantity += 1;
                quantityInput.val(quantity);
                updateQuantity(productId, mams, masize, quantity);
            });

            // Hàm cập nhật số lượng sản phẩm trong giỏ hàng
            function updateQuantity(productId, mams, masize, quantity) {
                $.ajax({
                    url: '@Url.Action("In_Decrease_Quantity", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        mams: mams,
                        masize: masize,
                        quantity: quantity
                    },
                    success: function (response) {
                        updateTotalPay();
                        alert(response.message); // Hiển thị thông báo sau khi cập nhật thành công
                    },
                    error: function () {
                        alert('Có lỗi xảy ra, vui lòng thử lại.'); // Thông báo khi có lỗi
                    }
                });
            }

            // Xóa sản phẩm khỏi giỏ hàng
            $('.delete-cart').click(function (e) {
                e.preventDefault(); // Ngăn chặn hành vi mặc định của nút submit

                const productId = $(this).data('product-id');
                const mams = $(this).data('color');
                const masize = $(this).data('size');

                $.ajax({
                    url: '@Url.Action("DeleteFromCart", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        mams: mams,
                        masize: masize
                    },
                    success: function (response) {
                        location.reload(); // Tải lại trang sau khi xóa thành công
                    },
                    error: function () {
                        alert('Có lỗi xảy ra, vui lòng thử lại.'); // Thông báo khi có lỗi
                    }
                });
            });

            // Cập nhật số lượng giỏ hàng khi trang được tải
            $.ajax({
                url: '@Url.Action("GetQuantityCart", "Cart")', // Gọi đến action trong controller
                type: 'GET',
                success: function (data) {
                    // Cập nhật số lượng giỏ hàng vào thẻ span
                    $('#cartQuantity').text(data);
                },
                error: function (xhr, status, error) {
                    console.log('Lỗi khi lấy số lượng giỏ hàng: ', error);
                }
            });
        });

        // Hàm cập nhật tổng tiền sau khi khuyến mãi
        function updateTotalPay(discount = 0) {
            $.ajax({
                type: "POST",
                url: '/Cart/GetTotalPay',
                success: function (data) {
                    let totalPay = data.totalPay * 1000; // Giả sử tổng tiền trả về tính bằng đơn vị ngàn

                    // Cập nhật tổng tiền ban đầu (chưa trừ giảm giá)
                    $('#totalPay').text(totalPay.toLocaleString('vi-VN') + '₫');

                    // Tính tổng cộng sau khi trừ giảm giá
                    let finalTotal = totalPay - discount;

                    // Cập nhật tổng cộng sau giảm giá vào finalTotal
                    $('#finalTotal').text(finalTotal.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }));
                },
                error: function (error) {
                    console.error("Lỗi cập nhật tổng cộng:", error); // Hiển thị lỗi trong console
                }
            });
        }

    </script>
